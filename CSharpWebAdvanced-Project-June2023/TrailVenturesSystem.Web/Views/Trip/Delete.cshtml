@model TripPreDeleteDetailsViewModel
@{
    ViewData["Title"] = "Delete Trip";
}
<head>
    <link rel="stylesheet" href="~/css/FormsStyle.css">
</head>
<div class="main-content">
   
    <h2 class="text-center">@ViewData["Title"]</h2>
    <hr />
    <div class="container mt-5">
        <form method="post" asp-action="Delete">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" disabled="disabled" />
                </div>
                <div class="pt-4 pb-4" style="display:flex;justify-content:space-evenly">
                    <div class="form-group col-4">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" disabled="disabled" />
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="ReturnDate" class="control-label"></label>
                        <input asp-for="ReturnDate" class="form-control" disabled="disabled" />
                    </div>
                </div>
                
                <div class="form-group mt-2 text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
   

</div>
